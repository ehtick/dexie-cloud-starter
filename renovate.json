{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "stabilityDays": 1,
  "packageRules": [
    { "matchPackagePatterns": ["*"], "rangeStrategy": "bump" },
    {
      "groupName": "dexie packages",
      "matchPackagePatterns": ["^dexie", "^y-dexie"],
      "schedule": ["before 3am on Monday"]
    },
    {
      "groupName": "tiptap packages",
      "matchPackagePatterns": ["^@tiptap/", "^tiptap-"],
      "schedule": ["before 3am on Monday"]
    },
    {
      "groupName": "MUI packages",
      "matchPackagePatterns": ["^@mui/", "^@emotion/"],
      "schedule": ["before 3am on Monday"]
    },
    {
      "groupName": "Next.js and React",
      "matchPackageNames": ["next", "react", "react-dom"],
      "matchPackagePatterns": ["^@types/react"],
      "schedule": ["before 3am on Monday"]
    },
    {
      "groupName": "devDependencies (non-major)",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "schedule": ["before 3am on Monday"]
    }
  ],
  "vulnerabilityAlerts": { "labels": ["security"], "assignAutomerge": false },
  "prHourlyLimit": 3,
  "prConcurrentLimit": 10,
  "labels": ["dependencies"],
  "assigneesFromCodeOwners": true
}
